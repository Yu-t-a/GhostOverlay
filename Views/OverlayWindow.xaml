<Window x:Class="GhostOverlay.Views.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:GhostOverlay.Helpers"
        Title="Server Monitor"
        Width="550"
        Height="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/GhostOverlay;component/Resources/Styles/DarkTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <helpers:StatusToColorConverter x:Key="StatusToColorConverter"/>
            <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource DarkSurfaceBrush}"
            BorderBrush="{StaticResource DarkBorderBrush}"
            BorderThickness="2"
            CornerRadius="12"
            Opacity="0.97">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20"
                            ShadowDepth="4"
                            Opacity="0.4"
                            Color="Black"/>
        </Border.Effect>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Icon & Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Width="32" Height="32"
                            Background="{StaticResource PrimaryBlueBrush}"
                            CornerRadius="6"
                            Margin="0,0,10,0">
                        <TextBlock Text="ðŸ“Š"
                                   FontSize="18"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Server Monitor"
                                   Style="{StaticResource HeaderTextStyle}"
                                   FontSize="18"/>
                        <TextBlock Text="Real-time monitoring"
                                   Style="{StaticResource CaptionTextStyle}"
                                   FontSize="10"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2"
                            Orientation="Horizontal">
                    <Button Content="âš™"
                            Style="{StaticResource IconButtonStyle}"
                            Click="Settings_Click"
                            ToolTip="Settings"/>
                    <Button Content="âž•"
                            Style="{StaticResource IconButtonStyle}"
                            Click="AddMonitor_Click"
                            ToolTip="Add Monitor"
                            Margin="6,0,0,0"/>
                    <Button Content="ðŸ”„"
                            Style="{StaticResource IconButtonStyle}"
                            Click="Refresh_Click"
                            ToolTip="Refresh Now"
                            Margin="6,0,0,0"/>
                    <Button Content="â”€"
                            Style="{StaticResource IconButtonStyle}"
                            Click="Close_Click"
                            ToolTip="Hide (Ctrl+Shift+O)"
                            Margin="6,0,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Endpoint List -->
            <ScrollViewer Grid.Row="1"
                         VerticalScrollBarVisibility="Auto"
                         Padding="0,0,5,0">
                <ItemsControl ItemsSource="{Binding MonitorResults}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource CardStyle}"
                                    CornerRadius="8"
                                    Padding="16"
                                    Margin="0,0,0,10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Status Indicator with Glow -->
                                    <Grid Grid.Column="0" Margin="0,0,15,0">
                                        <Ellipse Width="20"
                                                 Height="20"
                                                 Fill="{Binding Status, Converter={StaticResource StatusToColorConverter}}"/>
                                    </Grid>

                                    <!-- Endpoint Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding EndpointName}"
                                                   Style="{StaticResource SubHeaderTextStyle}"
                                                   FontSize="15"/>
                                        <TextBlock Text="{Binding Target}"
                                                   Style="{StaticResource BodyTextStyle}"
                                                   FontSize="11"
                                                   Opacity="0.7"
                                                   Margin="0,3,0,0"/>
                                        <TextBlock Text="{Binding ErrorMessage}"
                                                   FontSize="11"
                                                   Foreground="#ff6b6b"
                                                   FontWeight="Medium"
                                                   Margin="0,4,0,0"
                                                   Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                    </StackPanel>

                                    <!-- Latency Display -->
                                    <StackPanel Grid.Column="2"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Right">
                                        <Border Background="{StaticResource DarkSurfaceElevatedBrush}"
                                                CornerRadius="4"
                                                Padding="10,6">
                                            <TextBlock Text="{Binding LatencyMs, StringFormat={}{0} ms}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                                        </Border>
                                        <TextBlock Text="{Binding LastChecked, StringFormat=HH:mm:ss}"
                                                   Style="{StaticResource CaptionTextStyle}"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2"
                    Background="{StaticResource DarkBackgroundBrush}"
                    BorderBrush="{StaticResource DarkBorderBrush}"
                    BorderThickness="1,1,1,0"
                    CornerRadius="6,6,0,0"
                    Padding="12,10"
                    Margin="-20,15,-20,-20">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="â—"
                                   Foreground="{StaticResource StatusGreenBrush}"
                                   FontSize="12"
                                   Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding StatusSummary}"
                                   Style="{StaticResource BodyTextStyle}"
                                   FontSize="12"/>
                    </StackPanel>

                    <CheckBox Content="Click-through"
                              IsChecked="{Binding IsClickThrough}"
                              HorizontalAlignment="Right"
                              Style="{StaticResource ModernCheckBoxStyle}"
                              FontSize="12"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
