<Application x:Class="GhostOverlay.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GhostOverlay">
    <Application.Resources>
        <!-- Global Font Settings for Thai Support -->
        <FontFamily x:Key="ThaiFont">Leelawadee UI, Segoe UI, Tahoma, Arial</FontFamily>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource ThaiFont}"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="{StaticResource ThaiFont}"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="FontFamily" Value="{StaticResource ThaiFont}"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource ThaiFont}"/>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="FontFamily" Value="{StaticResource ThaiFont}"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="{StaticResource ThaiFont}"/>
        </Style>
    </Application.Resources>
</Application>
